@model List<Category>



<h1>Category List</h1>

<table class="table table-bordered table-striped">
   <thead>

        <tr>
            <th>
                Dispalay Name
            </th>
            <th>
                Dispalay Order
            </th>
        </tr>
    
   </thead>
   <tbody>
        @foreach (var obj in Model.OrderBy(u => u.DisplayOrder)@* ".OrderBy(u => u.DisplayOrder) " this code helps us in arranging the DB data in accessinding order*@)
        {
            <tr>
                <td>
                    @obj.Name
                </td>
                <td>
                    @obj.DisplayOrder
                </td>
            </tr>

        }
    </tbody>
</table>