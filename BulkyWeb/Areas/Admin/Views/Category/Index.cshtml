@model List<Category>

<partial name="_Notification" />


<div class="card shadow border-0 my-5">
    <div class="card-header bg-dark  bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Category List</h2>

            </div>
        </div>
    </div>


    <div class="card-body p-3">
        <div class="row pb-1">
            <div class="col-6">
                
            </div>
            <div class="col-6 text-end">
                <a asp-controller="Category" asp-action="Create" class="btn btn-outline-dark">
                    <i class="bi bi-bookmark-plus"></i>Create list
                </a>
            </div>
        </div>

   

    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>
                    Dispalay Name
                </th>
                <th>
                    Dispalay Order
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model.OrderBy(u => u.DisplayOrder)@* ".OrderBy(u => u.DisplayOrder) " this code helps us in arranging the DB data in accessinding order*@)
            {
                <tr>
                    <td class="col-4 md-lg-2">
                        @obj.Name
                    </td>
                    <td class="col-4 md-lg-2 ">
                        @obj.DisplayOrder
                    </td>
                    <td class="row-1 align-content-end">
                        <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-outline-primary">
                            <i class="bi bi-pencil-square"></i> Edit
                        </a>
                        <a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-outline-danger">
                            <i class="bi bi-trash-fill"></i> Delete
                        </a>
                    </td>
                </tr>

            }
        </tbody>
    </table>
    </div>
</div>




