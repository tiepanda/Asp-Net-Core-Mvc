@page
@model BulkyWebRazor_Temp.Pages.Categories.DeleteModel




<form method="post">

    <input asp-for="Category.Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-dark">Delete Category</h2>
            <hr />
        </div>
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="mb-3 row p-1">
            <label asp-for="Category.Name" class="p-0"></label>
            <input asp-for="Category.Name" disabled type="text" class="form-control" />
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Category.DisplayOrder" class="p-0"></label>
            <input asp-for="Category.DisplayOrder" disabled type="number" class="form-control" />

        </div>
    </div>

    <div class="row">
        <div class="col-3 mb-lg-2">
            <button type="submit" class="btn btn-outline-danger form-control ">
                Delete Record
            </button>

        </div>
        <div class="col-3 mb-lg-2">
            <a asp-page="/Categories/Index" class=" btn btn-outline-light border form-control ">
                Back To list
            </a>
        </div>
    </div>

</form>


